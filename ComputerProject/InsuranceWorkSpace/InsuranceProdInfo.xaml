<UserControl x:Class="ComputerProject.InsuranceWorkSpace.InsuranceProdInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.InsuranceWorkSpace"
               xmlns:font="clr-namespace:ComputerProject.Resource.Font"
             xmlns:localconvert="clr-namespace:ComputerProject.Converter"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Custom="clr-namespace:ComputerProject.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="style_Text" TargetType="Custom:TextboxCustom">
            <Setter Property="FontFamily" Value="{StaticResource Mulish}" />
            <Setter Property="TextWrapping" Value="WrapWithOverflow" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="CornerRadiusText" Value="5"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="KeyboardNavigation.TabIndex" Value="0"/>
            <Setter Property="MarginText" Value="10"/>
            <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource FindAncestor, 
                               AncestorType={x:Type local:InsuranceProdInfo}}, 
                               Path=Isreadonly}"/>
        </Style>
        <localconvert:RevertBooleanConverter x:Key="revertbool"/>
    </UserControl.Resources>

    <StackPanel  Margin="20,0">
        <Grid Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                                   Text="Thông tin sản phẩm"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource Mulish}"
                                   Foreground="{StaticResource Title}"></TextBlock>
            <Button x:Name="btn"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="10,0"
                                Padding="5"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                       IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, 
                                               AncestorType={x:Type local:InsuranceProdInfo}}, 
                                               Path=Isreadonly,Converter={StaticResource revertbool}}">
                <materialDesign:PackIcon Kind="Autorenew"
                                                     Width="18"
                                                     Height="18"
                                                     VerticalAlignment="Center"
                                                     Foreground="{StaticResource Icon}" />
            </Button>
        </Grid>
        <Custom:TextboxCustom x:Name="ProdName" 
                                      Title="Tên sản phẩm" 
                                      TextWrapping="WrapWithOverflow" 
                                      Text="Laptop HP 15s-fq2602TU" 
                                      MarginText="10" 
                                      Margin="0,5" 
                              Style="{DynamicResource style_Text}"></Custom:TextboxCustom>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Custom:TextboxCustom x:Name="ProdSerial" 
                                      Title="Số seri sản phẩm" 
                                      Text="LT12345671621" 
                                      TextWrapping="WrapWithOverflow" 
                                      MarginText="10" 
                                      Margin="0,5" 
                                      Style="{DynamicResource style_Text}"></Custom:TextboxCustom>
            <Button x:Name="btnRenew"
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                Margin="10,0,0,10"
                                Padding="5"
                    VerticalAlignment="Bottom"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                       IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, 
                                               AncestorType={x:Type local:InsuranceProdInfo}}, 
                                               Path=Isreadonly,Converter={StaticResource revertbool}}">
                <materialDesign:PackIcon Kind="CheckCircle"
                                                     Width="25"
                                                     Height="25"
                                                     Padding="0" 
                                                     Margin="0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{StaticResource Icon}" />
            </Button>
        </Grid>
     
        <Custom:TextboxCustom x:Name="IDSaleBill" 
                                      Title="Mã hóa đơn mua hàng" 
                                      Text="Laptop HP 15s-fq2602TU" 
                                      IsEnabled="False" 
                                      TextWrapping="WrapWithOverflow" 
                                      MarginText="10" Margin="0,5" 
                                     Style="{DynamicResource style_Text}"></Custom:TextboxCustom>
        <Custom:TextboxCustom x:Name="InsuranceDate" 
                                      Title="Ngày kết thúc bảo hành" 
                                      Text="15/2/2022" 
                                      IsEnabled="False" 
                                      TextWrapping="WrapWithOverflow" 
                                      MarginText="10" Margin="0,5" 
                                       Style="{DynamicResource style_Text}"></Custom:TextboxCustom>
        <Custom:TextboxCustom x:Name="AccessoriesIncluded"
                                      Title="Phụ kiện đính kèm" 
                                      Text="Laptop HP 15s-fq2602TU" 
                                      TextWrapping="WrapWithOverflow" 
                                      MarginText="10" Margin="0,5" 
                                       Style="{DynamicResource style_Text}"></Custom:TextboxCustom>
    </StackPanel>
</UserControl>