<UserControl x:Class="ComputerProject.InsuranceWorkSpace.InsuranceDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.InsuranceWorkSpace"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Custom="clr-namespace:ComputerProject.CustomControl"
             xmlns:Sale="clr-namespace:ComputerProject.SaleWorkSpace"
             xmlns:font="clr-namespace:ComputerProject.Resource.Font"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1300">
    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="20,10">
            <Button x:Name="btnBack" Style="{StaticResource MaterialDesignIconButton}" Width="40" Height="40" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon Kind="ArrowLeft" Foreground="{StaticResource Title}" />
            </Button>
            <TextBlock x:Name="txtTitleView" Text="Chi tiết hóa đơn" Foreground="{StaticResource Title}" FontSize="{x:Static font:Font.TitleView}" VerticalAlignment="Center" FontWeight="DemiBold" Margin="20,0"></TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Sale:CustomerSaleView x:Name="CustomerSearch" Margin="20,0"/>
            <Border x:Name="InsuranceInfor" Grid.Row="1" Background="White" CornerRadius="8" Margin="20,10,20,0">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                   Text="Thông tin sửa chữa, bảo hành"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource Mulish}"
                                   Foreground="{StaticResource Title}"></TextBlock>
                            <Button x:Name="btnRenew"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="10,0"
                                Padding="5"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}">
                                <materialDesign:PackIcon Kind="Autorenew"
                                                     Width="18"
                                                     Height="18"
                                                     VerticalAlignment="Center"
                                                     Foreground="{StaticResource Icon}" />
                            </Button>
                        </Grid>
                        <Custom:TextboxCustom x:Name="ProdSerial" Title="Số seri sản phẩm" Text="LT12345671621" MarginText="10" Margin="0,5" CornerRadiusText="5" FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <Custom:TextboxCustom x:Name="ProdName" Title="Tên sản phẩm" Text="Laptop HP 15s-fq2602TU" MarginText="10" Margin="0,5" CornerRadiusText="5" FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <Custom:TextboxCustom x:Name="IDSaleBill" Title="Mã hóa đơn mua hàng" Text="Laptop HP 15s-fq2602TU" MarginText="10" Margin="0,5" CornerRadiusText="5" FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <Custom:TextboxCustom x:Name="InsuranceExpiryDate" Title="Hạn bảo hành" Text="Laptop HP 15s-fq2602TU" MarginText="10" Margin="0,5" CornerRadiusText="5" FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <StackPanel
                            Margin="0,10"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,10"
                                VerticalAlignment="Top"
                                FontFamily="{StaticResource Mulish}"
                                FontSize="{x:Static font:Font.Body}"
                                FontWeight="SemiBold"
                                Foreground="Black"
                                Text="Ngày tiếp nhận" />

                            <Border
                                Height="50"
                                VerticalAlignment="Center"
                                Background="{StaticResource Background}"
                                BorderBrush="#DBD7F4"
                                BorderThickness="1"
                                CornerRadius="5">
                                <DatePicker
                                    x:Name="DateReception"
                                    Height="50"
                                    Margin="5,0,5,0"
                                    Padding="1"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderBrush="#DBD7F4"
                                    FontFamily="{StaticResource Mulish}"
                                    FontSize="{x:Static font:Font.Body}"
                                    Foreground="#11142D"
                                    Text="12/12/2021" />
                            </Border>
                        </StackPanel>
                        <StackPanel
                           Margin="0,10"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,10"
                                VerticalAlignment="Top"
                                FontFamily="{StaticResource Mulish}"
                                FontSize="{x:Static font:Font.Body}"
                                FontWeight="SemiBold"
                                Foreground="Black"
                                Text="Ngày hẹn trả" />

                            <Border
                                Height="50"
                                VerticalAlignment="Center"
                                Background="{StaticResource Background}"
                                BorderBrush="#DBD7F4"
                                BorderThickness="1"
                                CornerRadius="5">
                                <DatePicker
                                    x:Name="DateReceive"
                                    Height="50"
                                    Margin="5,0,5,0"
                                    Padding="1"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderBrush="#DBD7F4"
                                    FontFamily="{StaticResource Mulish}"
                                    FontSize="{x:Static font:Font.Body}"
                                    Foreground="#11142D"
                                    Text="12/12/2021" />
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="0,10">
                            <TextBlock   
                                FontWeight="SemiBold"
                                FontSize="{x:Static font:Font.Body}"
                                FontFamily="{StaticResource Mulish}"
                                Text="Tình trạng"
                                Foreground="Black"                   
                                Margin="0, 0, 0, 10"
                                VerticalAlignment="Top">
                            </TextBlock>
                            <Border BorderBrush="#DBD7F4" CornerRadius="5" BorderThickness="1" Background="{StaticResource Background}">
                                <ComboBox
                                    x:Name="Status"
                                    FontSize="{x:Static font:Font.Body}"
                                    FontFamily="{StaticResource Mulish}"
                                    Padding="15"
                                    BorderThickness="0"
                                    Background="{x:Null}"
                                    BorderBrush="#DBD7F4"
                                    ItemsSource="{Binding ShortStringList}" />
                            </Border>
                        </StackPanel>
                        <Custom:TextboxCustom x:Name="AccessoriesIncluded" Title="Phụ kiện đính kèm" Text="Laptop HP 15s-fq2602TU" MarginText="10" Margin="0,5" CornerRadiusText="5"  FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <Custom:TextboxCustom x:Name="DescStatus" Text="" Title="Mô tả tình trạng máy"  MarginText="10" Margin="0,5" CornerRadiusText="5"  FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                        <Custom:TextboxCustom x:Name="DescError" Text="" Title="Mô tả lỗi"  MarginText="10" Margin="0,5" CornerRadiusText="5"  FontFamily="{StaticResource Mulish}" Fontsize="{x:Static font:Font.Body}"></Custom:TextboxCustom>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Grid.RowSpan="2" Background="White" CornerRadius="8" Margin="0,0,20,0" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Margin="20,20,20,0" Text="Chi tiết sửa chữa, bảo hành" Foreground="{StaticResource Title}" FontSize="{x:Static font:Font.SubTitle}" FontWeight="DemiBold"></TextBlock>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="Mã hóa đơn:"  Margin="10,5" FontWeight="DemiBold" VerticalAlignment="Bottom" FontSize="{x:Static font:Font.Body}"/>
                            <TextBlock x:Name="BillID" Text="HD12456" Margin="10,5"  Grid.Column="2" Grid.Row="0"  FontWeight="DemiBold" VerticalAlignment="Bottom" FontSize="{x:Static font:Font.Body}"/>

                            <TextBlock Grid.Column="1" Grid.Row="1" Text="Ngày tạo:"  Margin="10,5" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}"/>
                            <TextBlock x:Name="DateBill"  Text="12-10-2021" Margin="10,0" Grid.Column="2" Grid.Row="1" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" />
                        </Grid>
                        <Border BorderBrush="#E1E1FB" BorderThickness="1" Height="50" Margin="10,10,10,0">
                            <Grid Background="{StaticResource Background}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="STT" Margin="20,0" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" FontFamily="{StaticResource Mulish}" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Tên sản phẩm" Margin="0,10" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" FontFamily="{StaticResource Mulish}" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="Đơn giá" Margin="20,0" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" FontFamily="{StaticResource Mulish}" FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" Text="Số Seri" Margin="10,0" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" FontFamily="{StaticResource Mulish}" FontWeight="Bold"/>
                                <TextBlock Grid.Column="4" Text="Ghi chú"   VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" FontFamily="{StaticResource Mulish}" FontWeight="Bold"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <ListView  x:Name="ListProdInDetailBill" Margin="10,0" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <local:InsuranceItemInBill/>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.Resources>
                            <ControlTemplate x:Key="SelectedTemplate" TargetType="ListViewItem">
                                <Border  BorderThickness="0" Background="{StaticResource SelectedItemBackground}">
                                    <local:InsuranceItemInBill/>
                                </Border>
                            </ControlTemplate>
                        </ListView.Resources>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <local:InsuranceItemInBill/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="IsSelected" Value="True"/>
                                    </DataTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="true" />
                                            <Condition Property="Selector.IsSelectionActive" Value="true" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter Property="Template" Value="{StaticResource SelectedTemplate}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <local:InsuranceItemInBill/>
                        <local:InsuranceItemInBill/>
                        <local:InsuranceItemInBill/>
                    </ListView>
                    <Grid Grid.Row="2" Margin="30,10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Tổng tiền" Margin="10,0" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" Foreground="{StaticResource Icon}"/>
                        <Border Grid.Row="1" BorderBrush="{StaticResource MainColor}" BorderThickness="0,0,0,1">
                            <TextBlock Text="Giảm giá" Margin="10,5" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" Foreground="{StaticResource Icon}"/>
                        </Border>
                        <TextBlock Grid.Row="2" Text="Tổng hóa đơn" Margin="10,5" FontWeight="Bold" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource MainColor}"/>
                        <TextBlock Grid.Row="3" Text="Tiền khách đưa" Margin="10,0" Visibility="{Binding}" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" Foreground="{StaticResource Icon}"/>
                        <TextBlock Grid.Row="4" Text="Tiền thừa" Margin="10,5" Visibility="{Binding}" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" Foreground="{StaticResource Icon}"/>
                        <TextBlock x:Name="txtTotalProd" Text="16,499,000" Grid.Row="0" Margin="10,0" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" HorizontalAlignment="Right" Foreground="Black"/>
                        <TextBlock x:Name="txtPoint" Text="25,000" Grid.Row="1" Margin="10,5" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" HorizontalAlignment="Right" Foreground="Black"/>
                        <TextBlock x:Name="txtTotalBill" Text="16,474,000" Grid.Row="2" Margin="10,5" FontWeight="Bold" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Right" Foreground="{StaticResource MainColor}"/>
                        <TextBlock x:Name="txtReceiveMoney" Text="16,500,000" Visibility="{Binding}" Grid.Row="3" Margin="10,0"  FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" HorizontalAlignment="Right" Foreground="Black"/>
                        <TextBlock x:Name="txtExchangeMoney" Text="26,000" Visibility="{Binding}" Grid.Row="4" Margin="10,5" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="{x:Static font:Font.Body}" HorizontalAlignment="Right" Foreground="Black"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <StackPanel Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnDelete" Style="{StaticResource MaterialDesignOutlinedButton}" materialDesign:ButtonAssist.CornerRadius="5" BorderBrush="{StaticResource Warning}" Margin="20,0"  Foreground="{StaticResource Warning}" Width="100" Height="35" Content="Xóa" Padding="30,0"></Button>
            <Button x:Name="btnPrint" Background="{StaticResource MainColor}"   Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="5" Height="35"  Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="PrinterOutline" Height="20" Width="20" />
                    <TextBlock Text="In hóa đơn" Margin="5,0" ></TextBlock>
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
