<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ComputerProject.ApplicationWorkspace"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="{x:Type local:TemplateTabItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TemplateTabItem}">
                    <ContentControl Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="15,0"
                                VerticalAlignment="Center"
                                Kind="{TemplateBinding Icon}" />
                            <TextBlock
                                Margin="20,0"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Mulish}"
                                FontSize="16"
                                FontWeight="Medium"
                                Text="{TemplateBinding TabName}" />
                        </StackPanel>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>