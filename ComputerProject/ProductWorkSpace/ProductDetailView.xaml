<UserControl x:Class="ComputerProject.ProductWorkSpace.ProductDetailView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.ProductWorkSpace"
             xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
             xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
             mc:Ignorable="d" 
             Padding="10, 10, 10, 0" Background="{StaticResource Background}"
             d:DesignHeight="1000" d:DesignWidth="1300">
    <Grid
       >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.07*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Orientation="Horizontal"
                 Margin="30,0,0,0">
            <Button
                          x:Name="BtnBack"
                          Style="{StaticResource MaterialDesignIconButton}"
                          ToolTip="Trở về"
                          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                                    Kind="ArrowLeft"
                                    Foreground="{StaticResource Title}"
                                    />
            </Button>
            <TextBlock
                x:Name="Title"
                    FontSize="{x:Static localfont:Font.Title}"
                    FontWeight="DemiBold"
                    FontFamily="{StaticResource Mulish}"
                    Foreground="{StaticResource Title}"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    >
                    Chi tiết sản phẩm
            </TextBlock>
        </StackPanel>
        <Grid
            
            Grid.Row="1"
            Margin="20"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="White" Margin="20, 0, 20, 0"></Rectangle>
            <Rectangle Fill="White" Grid.Column="1" Margin="20, 0, 20, 0"></Rectangle>
            <ScrollViewer
                Grid.Column="0"
                VerticalScrollBarVisibility="Visible"
                Margin="40, 0, 0, 0">
            <StackPanel
                x:Name="ProInfor"  
                IsEnabled="False">
                    <localcustom:TextboxCustom
                        x:Name="Code"
                        VerticalAlignment="Center"
                        Margin="0, 20, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        IsEnabled="False"
                        CornerRadiusText="5"
                        Title="    Mã sản phẩm"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>
               
                <Grid
                    Margin="0, 0, 20, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="110"
                        Height="110"
                        Source="/ComputerProject;component/Resource/Image/AddImage.png"
                        Stretch="Fill"
                        >
                    </Image>
                    <Grid
                        Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="TblChoosseImage"
                            FontSize="{x:Static localfont:Font.Body}"
                            FontFamily="{StaticResource Mulish}"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Margin="10,3,0,0"
                            Visibility="Hidden"
                            VerticalAlignment="Center">
                            Chọn ảnh sản phẩm
                        </TextBlock>
                        <Button
                            x:Name="BtnAddImage"
                            HorizontalAlignment="Stretch"
                            Margin="10, 0, 10, 0"
                            Grid.Row="1"
                            FontSize="{x:Static localfont:Font.Body}"
                            FontFamily="{StaticResource Mulish}"
                            Background="{StaticResource MainColor}"
                            BorderBrush="{StaticResource MainColor}"
                            Content="Tải ảnh lên"
                            Visibility="Hidden"
                            >
                        </Button>
                    </Grid>
                </Grid>
               
                    <localcustom:TextboxCustom
                        CornerRadiusText="5"
                        x:Name="ProductName"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        Title="    Tên sản phẩm"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>
                  <StackPanel
                   Margin="0, 0, 20, 10" >
                    <TextBlock   
                                FontWeight="SemiBold"
                                FontSize="{x:Static localfont:Font.Body}"
                                FontFamily="{StaticResource Mulish}"
                                Text="   Danh mục"
                                Foreground="Black"                   
                                Margin="0, 0, 0, 10"
                                VerticalAlignment="Top">
                    </TextBlock>

                    <ComboBox
                        x:Name="Category"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        Padding="15"
                        Background="{StaticResource Background}"
                        BorderBrush="#DBD7F4"
                        ItemsSource="{Binding ShortStringList}" />
                </StackPanel>
            
                    <localcustom:TextboxCustom
                        CornerRadiusText="5"
                        x:Name="Procedure"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        Title="    Nhà cung cấp"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>
                    <localcustom:TextboxCustom
                        x:Name="Quantity"
                         CornerRadiusText="5"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        Title="    Số lượng"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>
                    <localcustom:TextboxCustom
                        x:Name="Price"
                        VerticalAlignment="Center"
                        CornerRadiusText="5" 
                        Margin="0, 10, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        Title="    Giá gốc"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>

                    <localcustom:TextboxCustom
                        x:Name="PriceSales"
                        CornerRadiusText="5" 
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="{x:Static localfont:Font.Body}"
                        FontFamily="{StaticResource Mulish}"
                        MarginText="10"
                        Title="    Giá bán"
                        IsTabStop="False" KeyboardNavigation.TabIndex="0" 
                        >

                    </localcustom:TextboxCustom>
            </StackPanel>
            </ScrollViewer>
            <StackPanel
                x:Name="Specifications"
                IsEnabled="False"
                Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="24"
                        FontWeight="Medium"
                        FontFamily="{StaticResource Mulish}"
                        Foreground="{StaticResource Title}"
                        Margin="30,30,0,30"
                        VerticalAlignment="Center"
                        Text=" Thông số"
                    >
                    </TextBlock>
                    <Button
                            x:Name="BtnAdd"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="0, 0, 40, 0"
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Background="{StaticResource MainColor}"
                            Height="37"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Visibility="Hidden"
                            ToolTip="Thêm sản phẩm">
                        <StackPanel 
                                Orientation="Horizontal">
                            <Image
                                    Height="18"
                                    Width="18"
                                    Source="/ComputerProject;component/Resource/Icon/Plus.png">
                            </Image>
                            <TextBlock
                                    Text="Thêm mới" 
                                    FontSize="{x:Static localfont:Font.Body}"
                                    FontFamily="{StaticResource Mulish}"
                                    Margin="5, 0, 0, 0"
                                    Foreground="White"/>
                        </StackPanel>

                    </Button>
                </Grid>
               
                <ListView
                    x:Name="ListSpecifications"
                    Grid.Column="1">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="20, 0, 20,0"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:ProdcutAddSpecificationsRow></local:ProdcutAddSpecificationsRow>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListViewItem>
                        <local:ProdcutAddSpecificationsRow/>
                    </ListViewItem>
                    <ListViewItem>
                        <local:ProdcutAddSpecificationsRow/>
                    </ListViewItem>
                    <ListViewItem>
                        <local:ProdcutAddSpecificationsRow/>
                    </ListViewItem>
                    <ListViewItem>
                        <local:ProdcutAddSpecificationsRow/>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0, 0, 60, 0">
            <Button
                x:Name="BtnDel"
                Background="Transparent"
                BorderBrush="{StaticResource Warning}"
                Foreground="{StaticResource  Warning}"
                Width="110"
                Height="37"
                 Margin="0, 0, 20, 0"
                >
                Xóa
            </Button>
            <Button
                x:Name="Btnedit"
                Background="{StaticResource MainColor}"
                Width="110"
                Height="37"
                Margin="20, 0, 0, 0" Click="Btnedit_Click"
                >
                Chỉnh sửa
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
