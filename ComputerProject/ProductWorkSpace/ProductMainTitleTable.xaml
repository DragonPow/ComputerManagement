<UserControl
    x:Class="ComputerProject.ProductWorkSpace.ProductMainTitleTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComputerProject.ProductWorkSpace"
    xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="64"
    d:DesignWidth="1321"
    Background="{StaticResource Background}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TitleCell" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Padding" Value="22,17,16,16" />
            <Setter Property="Foreground" Value="#11142D" />
            <Setter Property="FontFamily" Value="{StaticResource Mulish}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.28*" />
            <ColumnDefinition Width="0.14*" />
            <ColumnDefinition Width="0.09*" />
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="0.09*" />
            <ColumnDefinition Width="0.04*" />
            <ColumnDefinition Width="0.04*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="Name"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Sản phẩm
        </TextBlock>
        <TextBlock
            x:Name="Code"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Mã sản phẩm
        </TextBlock>
        <TextBlock
            x:Name="Quantity"
            Grid.Column="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Số lượng
        </TextBlock>
        <TextBlock
            x:Name="Unit"
            Grid.Column="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Đơn giá
        </TextBlock>
        <TextBlock
            x:Name="State"
            Grid.Column="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Trạng thái
        </TextBlock>
        <TextBlock
            x:Name="Number"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Mulish}"
            FontSize="{x:Static localfont:Font.Body}"
            FontWeight="SemiBold"
            Style="{StaticResource TitleCell}">
            Hạn bảo hành
        </TextBlock>
    </Grid>
</UserControl>
