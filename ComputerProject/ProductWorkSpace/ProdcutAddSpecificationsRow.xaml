<UserControl x:Class="ComputerProject.ProductWorkSpace.ProdcutAddSpecificationsRow"
             xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.ProductWorkSpace"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="51" d:DesignWidth="600">
    <Grid
        Height="50"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="{StaticResource Background}" ></Rectangle>
        <Border
            BorderThickness="1"
            BorderBrush="{StaticResource Icon}">
        <TextBlock
            FontSize="{x:Static localfont:Font.Body}"
            FontFamily="{StaticResource Mulish}"
            Foreground="#11142D"
            VerticalAlignment="Center"
            Margin="10, 0, 0, 0"         
            >
        </TextBlock>
        </Border>
        <Border
            Grid.Column="1"
            BorderThickness="1"
            BorderBrush="{StaticResource Icon}">
            <TextBlock
                x:Name="Value"
                xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
                FontFamily="{StaticResource Mulish}"
                Foreground="#11142D"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"         
            >
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
