<UserControl x:Class="ComputerProject.ProductWorkSpace.ProductAddView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.ProductWorkSpace"
             xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
             mc:Ignorable="d" 
             Padding="10, 10, 10, 0" Background="{StaticResource Background}"
             d:DesignHeight="1000" d:DesignWidth="1300">
    <Grid
       >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.07*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Orientation="Horizontal"
                 Margin="30,0,0,0">
            <Button
                          x:Name="BtnBack"
                          Style="{StaticResource MaterialDesignIconButton}"
                          ToolTip="Trở về"
                          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                          IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                <materialDesign:PackIcon
                                    Kind="ArrowLeft"
                                    Foreground="{StaticResource Title}"
                                    />
            </Button>
            <TextBlock
                    FontSize="35"
                    FontWeight="DemiBold"
                    FontFamily="{StaticResource Mulish}"
                    Foreground="{StaticResource Title}"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    >
                    Thêm sản phẩm
            </TextBlock>
        </StackPanel>
        <Grid
            Grid.Row="1"
            Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="White" Margin="20, 0, 20, 0"></Rectangle>
            <Rectangle Fill="White" Grid.Column="1" Margin="20, 0, 20, 0"></Rectangle>
            <ListView
                Margin="40, 0, 0, 0"
                Grid.Column="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListViewItem>
                    <localcustom:TextboxCustom
                        x:Name="Code"
                        VerticalAlignment="Center"
                        Margin="0, 20, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        IsEnabled="False"
                        CornerRadiusText="5"
                        Title="    Mã sản phẩm"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>
                <local:ProductAddViewAddPicture
                    Margin="0, 0, 20, 10">
                </local:ProductAddViewAddPicture>
                <ListViewItem>
                    <localcustom:TextboxCustom
                        CornerRadiusText="5"
                        x:Name="ProductName"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        Title="    Tên sản phẩm"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>
                <StackPanel
                   Margin="0, 0, 20, 10" >
                    <TextBlock   
                                FontSize="16"
                                FontWeight="Bold"
                                Text="   Danh mục"
                                Foreground="Black"                   
                                Margin="0, 0, 0, 10"
                                VerticalAlignment="Top">
                    </TextBlock>

                    <ComboBox
                        x:Name="Category"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                        FontSize="16"
                        Padding="15"
                        Background="{StaticResource Background}"
                        BorderBrush="#DBD7F4"
                        FontFamily="{StaticResource Mulish}"
                        ItemsSource="{Binding ShortStringList}" />
                </StackPanel>
                <ListViewItem>
                    <localcustom:TextboxCustom
                        CornerRadiusText="5"
                        x:Name="Procedure"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        Title="    Nhà cung cấp"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>
                <ListViewItem>
                    <localcustom:TextboxCustom
                        x:Name="Quantity"
                         CornerRadiusText="5"
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        Title="    Số lượng"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>
                <ListViewItem>
                    <localcustom:TextboxCustom
                        VerticalAlignment="Center"
                        CornerRadiusText="5" 
                        Margin="0, 10, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        Title="    Giá gốc"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>

                <ListViewItem>
                    <localcustom:TextboxCustom
                        x:Name="PriceSales"
                        CornerRadiusText="5" 
                        VerticalAlignment="Center"
                        Margin="0, 10, 20, 10"
                        FontSize="16"
                        MarginText="10"
                        Title="    Giá bán"
                        >

                    </localcustom:TextboxCustom>
                </ListViewItem>
            </ListView>
            <StackPanel
                Grid.Column="1">
                <TextBlock
                    FontSize="24"
                    FontWeight="Medium"
                    FontFamily="{StaticResource Mulish}"
                    Foreground="{StaticResource Title}"
                    Margin="30,30,0,30"
                    VerticalAlignment="Center"
                    Text=" Thông số"
                    >

                </TextBlock>
                <ListView
                    x:Name="ListSpecifications"
                    Grid.Column="1">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="20, 0, 20,0"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:ProdcutAddSpecificationsRow></local:ProdcutAddSpecificationsRow>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0, 0, 60, 0">
            <Button
                Background="{StaticResource MainColor}"
                Width="110"
                Height="37"
                Margin="0, 0, 20, 0"
                >
                Lưu
            </Button>
            <Button
                Background="Transparent"
                BorderBrush="{StaticResource MainColor}"
                Foreground="{StaticResource MainColor}"
                Width="110"
                Height="37"
                 Margin="20, 0, 0, 0"
                >
                Hủy
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
