<UserControl x:Class="ComputerProject.ProductWorkSpace.Filtertab"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.ProductWorkSpace"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="1044" d:DesignWidth="318">
    <StackPanel>
    <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="0"  
                Margin="20,20,0, 0">
                <Button      
                  x:Name ="BtnBack"
                  Style="{StaticResource MaterialDesignIconButton}"
                  ToolTip="Trở về"
                  Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    <materialDesign:PackIcon
                            Kind="ArrowLeft"
                            Foreground="{StaticResource Title}"
                            />
                </Button>
        <TextBlock
                FontSize="25"
                FontWeight="Bold"
                FontFamily="{StaticResource Mulish}"
                Foreground="{StaticResource Title}"
                Margin="20,3,0,0"
                VerticalAlignment="Center"
                >
                Bộ lọc
        </TextBlock>     
    </StackPanel>
        <StackPanel
                   Margin="30, 30, 30, 0" >
            <TextBlock   
                                FontSize="16"
                                FontWeight="Bold"
                                FontFamily="{StaticResource Mulish}"
                                Text="   Danh mục"
                                Foreground="Black"                   
                                Margin="0, 0, 0, 10"
                                VerticalAlignment="Top">
            </TextBlock>

            <ComboBox
                        x:Name="Category"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                        FontSize="16"
                        Background="{StaticResource Background}"
                        BorderBrush="#DBD7F4"
                        FontFamily="{StaticResource Mulish}"
                        ItemsSource="{Binding ShortStringList}" />
        </StackPanel>
    
    </StackPanel>
</UserControl>
