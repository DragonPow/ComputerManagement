<UserControl x:Class="ComputerProject.CategoryWorkspace.AllViewDetailCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:ComputerProject.CategoryWorkspace"
             xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="888" d:DesignWidth="1330"
             Background="{StaticResource Background}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="0" Grid.Row="1" Margin="20"/>
         <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="1" Grid.Row="1" Margin="20"/>

        <local:TitleDetailCategory
            x:Name="Title"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0" 
            >
        </local:TitleDetailCategory>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="25, 45, 25, 25">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.8*"></RowDefinition>
            </Grid.RowDefinitions>
            <localcustom:TextboxCustom
                x:Name="NameCategory"
                CornerRadiusText="8"
                Texthint = "Lap top"
                Title="Tên danh mục"
                FontSize="16"
                Margin="10, 0, 20, 0"
                MarginText="10"
                IsEnabled="false"
                >
            </localcustom:TextboxCustom>
           
            <local:TitleCategoryLv2
                x:Name="Btn_Add_Catelv2"
                Grid.Row="1"
                VerticalAlignment="Center">
            </local:TitleCategoryLv2>
            <ListView
                IsEnabled="False"
                x:Name="ListCategoryLv2"
                Grid.Row="2" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <ItemContainerTemplate>
                        <local:Categorylv2Row Margin="15, 0, 0, 0" x:Name="item"></local:Categorylv2Row>
                    </ItemContainerTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"></RowDefinition>
                <RowDefinition Height="0.07*"></RowDefinition>
                <RowDefinition Height="0.9*"></RowDefinition>
            </Grid.RowDefinitions>

            <local:PropertiesTitlexaml 
                x:Name="BtnAddSpeci"
                Margin="0, 0, 0, 20"
                >
                
            </local:PropertiesTitlexaml>
            <localcustom:Search
                 Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="20, 0, 0, 20"
                x:Name="Search"
                Width="500"
                Texthint="Tìm theo danh mục">
            </localcustom:Search>

            <local:TittlePropertiesTable
                    Grid.Row="1">
            </local:TittlePropertiesTable>
          
            <ListView
                IsEnabled="False"
                x:Name="ListProperties"
                Grid.Row="3">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <ItemContainerTemplate>
                        <local:PropertiesRow></local:PropertiesRow>
                    </ItemContainerTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
       
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="2"
            Grid.Column="1"
            Margin="0, 0, 20, 0"
            HorizontalAlignment="Right">
            <Button
                x:Name="BtnDelete"
                Background="Transparent"
                Width="110"
                Height="48"
                Margin="10"
                FontFamily="{StaticResource Mulish}"
                FontSize="16"
                Foreground="{StaticResource Warning}"
                BorderBrush="{StaticResource Warning}"
                >
               Xóa
            </Button>
            <Button
                x:Name="BtnEdit"
                 Width="150"
                Height="48"
                Margin="10"
                FontFamily="{StaticResource Mulish}"
                FontSize="16"
                Background="{StaticResource MainColor}"
                Click="BtnEdit_Click"
                BorderBrush="{StaticResource Icon}">
            Chỉnh sửa
            </Button>

        </StackPanel>
            
    </Grid>
</UserControl>
