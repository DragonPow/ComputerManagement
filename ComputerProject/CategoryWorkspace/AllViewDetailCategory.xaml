<UserControl x:Class="ComputerProject.CategoryWorkspace.AllViewDetailCategory"
              xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:ComputerProject.CategoryWorkspace"
             xmlns:localsearch="clr-namespace:ComputerProject.Category"
             xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1380"
             Background="{StaticResource Background}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="0" Grid.Row="1" Margin="20, 10, 20, 10"/>
        <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="1" Grid.Row="1" Margin="20, 10, 20, 10"/>

        <local:TitleDetailCategory
            x:Name="Title"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0" 
            >
        </local:TitleDetailCategory>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="25, 25, 25, 25">
            <Grid.RowDefinitions>
                <RowDefinition Height="77.6"></RowDefinition>
                <RowDefinition Height="13*"></RowDefinition>
                <RowDefinition Height="69*"></RowDefinition>
            </Grid.RowDefinitions>
            <localcustom:TextboxCustom
                x:Name="NameCategory"
                CornerRadiusText="8"
                Texthint = "Lap top"
                Title="Tên danh mục"
                FontSize="{x:Static localfont:Font.Body}"
                Margin="10, 0, 30, 0"
                MarginText="3"
                IsEnabled="false"
                >
            </localcustom:TextboxCustom>

            <local:TitleCategoryLv2
                VerticalAlignment="Bottom"
                x:Name="Btn_Add_Catelv2"
                Grid.Row="1">
            </local:TitleCategoryLv2>
            <ListView
                IsEnabled="False"
                x:Name="ListCategoryLv2"
                Grid.Row="2" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <ItemContainerTemplate>
                        <local:Categorylv2Row Margin="15, 0, 0, 0" x:Name="item"></local:Categorylv2Row>
                    </ItemContainerTemplate>
                </ListView.ItemTemplate>
                <ListViewItem>
                    <local:Categorylv2Row Margin="15, 0, 0, 0" x:Name="item"></local:Categorylv2Row>
                </ListViewItem>
                <ListViewItem>
                    <local:Categorylv2Row Margin="15, 0, 0, 0"></local:Categorylv2Row>
                </ListViewItem>

            </ListView>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="25, 15, 25, 15">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"></RowDefinition>
                <RowDefinition Height="0.07*"></RowDefinition>
                <RowDefinition Height="0.9*"></RowDefinition>
            </Grid.RowDefinitions>

            <local:PropertiesTitlexaml 
                x:Name="BtnAddSpeci"
                VerticalAlignment="Center"
                Margin="0,0,0,-0.4" 
                d:LayoutOverrides="LeftMargin, RightMargin"
                >

            </local:PropertiesTitlexaml>
            <localcustom:Search
                 Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="20, 0, 0, 20"
                x:Name="Search"
                Width="500"
                Texthint="Tìm theo danh mục">
            </localcustom:Search>

            <local:TittlePropertiesTable
                    Grid.Row="1">
            </local:TittlePropertiesTable>

            <ListView
                IsEnabled="False"
                x:Name="ListProperties"
                Grid.Row="3">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <ItemContainerTemplate>
                        <local:PropertiesRow></local:PropertiesRow>
                    </ItemContainerTemplate>
                </ListView.ItemTemplate>
                <ListViewItem>
                    <local:PropertiesRow></local:PropertiesRow>
                </ListViewItem>
                <ListViewItem>
                    <local:PropertiesRow></local:PropertiesRow>
                </ListViewItem>
                <ListViewItem>
                    <local:PropertiesRow></local:PropertiesRow>
                </ListViewItem>
            </ListView>
        </Grid>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="2"
            Grid.Column="1"
            Margin="0, 0, 20, 0"
            HorizontalAlignment="Right">
            <Button
                x:Name="BtnDelete"
                Background="Transparent"
                Width="100"
                Height="40"
                Margin="10"
                FontFamily="{StaticResource Mulish}"
                FontSize="16"
                Foreground="{StaticResource Warning}"
                BorderBrush="{StaticResource Warning}"
                >
                Xóa
            </Button>
            <Button
                x:Name="BtnEdit"
                 Width="130"
                Height="40"
                Margin="10"
                FontFamily="{StaticResource Mulish}"
                FontSize="16"
                Background="{StaticResource MainColor}"
                BorderBrush="{StaticResource MainColor}"
                Click="BtnEdit_Click"
                >
                Chỉnh sửa
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
