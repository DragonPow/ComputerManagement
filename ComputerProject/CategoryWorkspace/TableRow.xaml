<UserControl x:Class="ComputerProject.CategoryWorkspace.TableRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.CategoryWorkspace"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="67" d:DesignWidth="1310"
             Background="Transparent"
             >
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="CellTitle">
            <Setter Property="FontFamily" Value="{StaticResource Mulish}"></Setter>
            <Setter Property="FontWeight" Value="Regular"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical"
                Height="67">
        <Grid
            Height="60">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="0.23*"></ColumnDefinition>
            <ColumnDefinition Width="0.65*"></ColumnDefinition>
            <ColumnDefinition Width="0.06*"></ColumnDefinition>
            <ColumnDefinition Width="0.06*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="CategoryLv1"
            Style="{StaticResource CellTitle}"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            >
           
        </TextBlock>

        <TextBlock
            x:Name="CategoryLv2"
            Style="{StaticResource CellTitle}"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            >
           
        </TextBlock>

        <Button
            x:Name="BtnEdit"
            ToolTip="Chỉnh sửa danh mục"
            Grid.Column="2"
            Background="Transparent"     
            BorderThickness="0"
            HorizontalAlignment="Right"
            >
            <materialDesign:PackIcon
                Kind="SquareEditOutline" 
                Foreground="{StaticResource MainColor}"
                Width="24"
                Height="24"
                />
        </Button>
        <Button
            x:Name="BtnDelete"
            ToolTip="Xóa danh mục"
            Grid.Column="3"
            Background="Transparent"     
            BorderThickness="0"
            HorizontalAlignment="Left"
            >
            <materialDesign:PackIcon
                Kind="DeleteOutline" 
                Foreground="{StaticResource Warning}"
                Width="24"
                Height="24"
                />
        </Button>
    </Grid>
        <Separator Background="{StaticResource Divition}"/>
    </StackPanel>
</UserControl>
