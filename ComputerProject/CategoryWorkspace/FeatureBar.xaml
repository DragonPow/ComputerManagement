<UserControl x:Class="ComputerProject.CategoryWorkspace.FeatureBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.Category"
             xmlns:local1="clr-namespace:ComputerProject.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1340"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:Search
            Grid.Column="0"
            HorizontalAlignment="Left"
            Margin="20, 0, 0, 0">
        </local:Search>
        <local1:ButtonIcon
            Grid.Column="1"
            Height = "40"
             Width="100"
             Text="Thêm mới" 
             PathData="M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z" 
             Background="{StaticResource MainColor}" 
        />
    </Grid>
</UserControl>
