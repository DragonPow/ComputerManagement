<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ComputerProject.CustomControl">

    <Style TargetType="{x:Type local:ButtonIcon}">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Height" Value="24" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ButtonIcon}"
                >
                    <Border                         
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="5"
                            HorizontalAlignment="Left"
                            >
                        
                        <Viewbox 
                             >
                            <StackPanel Orientation="{TemplateBinding Orientation}" 
                                        Height="{TemplateBinding Height}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="{TemplateBinding Background}">
                                <Viewbox           
                                         HorizontalAlignment="Left" 
                                         VerticalAlignment="Center"   
                                         Width="26"
                                         Visibility="{TemplateBinding IconVisibility}" 
                                        >

                                    <Path Grid.Column="0"
                                              Fill="White" 
                                               Margin="10, 0, 0, 0"
                                              Data="{TemplateBinding PathData}"/>

                                </Viewbox>
                              
                                <ContentControl 
                                                Grid.Column="1"
                                                Content="{TemplateBinding Text}" 
                                                Visibility="{TemplateBinding TextVisibility}"
                                                HorizontalAlignment="Center" 
                                                Foreground="White"
                                                VerticalAlignment="Center"                              
                                                FontSize="22"
                                               
                                                Margin="10,0,15,0"/>
                            </StackPanel>
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type local:TextboxCustom}">
        <Setter Property="Background" Value="#F7F7FC" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TextboxCustom}">
                    <StackPanel>
                        <TextBlock                                                    
                                FontSize="{TemplateBinding FontsizeTitle}"
                                FontWeight="Bold"
                                Text="{TemplateBinding Title}"
                                Foreground="Black"
                                Margin="0, 0, 0, 10"
                                Visibility="{TemplateBinding  VisibleTitle}"
                                VerticalAlignment="Top">
                        </TextBlock>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#DBD7F4"
                            CornerRadius="10"
                            BorderThickness="0"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontSize="{TemplateBinding Fontsize}"                          
                                Margin="10, 10, 10, 10"
                                Foreground="#545454"
                                Text ="{TemplateBinding Texthint}"
                                >
                            </TextBlock>
                                 
                            
                    </Border>
                        </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
