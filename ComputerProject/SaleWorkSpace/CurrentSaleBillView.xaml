<UserControl x:Class="ComputerProject.SaleWorkSpace.CurrentSaleBillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.SaleWorkSpace"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="450">
    <Grid Margin="20,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2.2*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <local:CustomerSaleView Grid.Row="0"></local:CustomerSaleView>
        <Border Grid.Row="1" Margin="0,15" CornerRadius="8" Background="White">
            <StackPanel>
                <Border Margin="20,5" BorderBrush="{StaticResource Icon}" BorderThickness="0,0,0,1">
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Đơn hàng hiện tại" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" FontFamily="{StaticResource Mulish}"></TextBlock>
                        <materialDesign:PackIcon Grid.Column="1" Width="24" Height="24" Kind="Autorenew" VerticalAlignment="Center" Margin="10,0" Foreground="{StaticResource Icon}"/>
                    </Grid>
                </Border>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="15,5" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:ProdChooseItem/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>
        </Border>
        <Border Grid.Row="2" CornerRadius="8" Background="White">
            <StackPanel>
                <Border Margin="20" BorderThickness="0 0 0 1" BorderBrush="{StaticResource Icon}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Margin="0,0,30,0" Text="Tổng tiền" FontSize="16" FontFamily="{StaticResource Mulish}" FontWeight="DemiBold" Foreground="{StaticResource Icon}"></TextBlock>
                        <TextBlock Grid.Column="1" Text="15,499,000" FontSize="16" FontFamily="{StaticResource Mulish}" FontWeight="DemiBold" HorizontalAlignment="Right" Margin="5,0"></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,10,30,15" Text="Điểm thưởng" FontSize="16" FontFamily="{StaticResource Mulish}" FontWeight="DemiBold" Foreground="{StaticResource Icon}"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="1" BorderBrush="{StaticResource Icon}" BorderThickness="1"  Margin="0,10,5,15" Padding="5,2" Text="25,000" FontSize="16" FontFamily="{StaticResource Mulish}" FontWeight="DemiBold" HorizontalAlignment="Right"></TextBox>
                    </Grid>
                </Border>
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,30,0" Text="Tổng hóa đơn" FontSize="16" FontFamily="{StaticResource Mulish}" FontWeight="DemiBold" Foreground="{StaticResource Icon}"></TextBlock>
                    <TextBlock Grid.Column="1" Text="15,499,000" FontSize="24" FontFamily="{StaticResource Mulish}" FontWeight="Bold" HorizontalAlignment="Right" Margin="5,0"></TextBlock>
                </Grid>
            </StackPanel>

        </Border>
        <Button Grid.Row="3" Content="THANH TOÁN" Height="50" FontFamily="{StaticResource Mulish}" FontSize="16" Margin="50,20,50,30" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="8" Background="{StaticResource MainColor}" BorderBrush="{StaticResource MainColor}" ></Button>
    </Grid>
</UserControl>
