<UserControl x:Class="ComputerProject.CustomerWorkspace.CustomerDetailView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerProject.CustomerWorkspace"
             xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
             xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1485"
             Background="{StaticResource Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*"></RowDefinition>
            <RowDefinition Height="0.91*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                 Margin="20,0,0,0.8">
            <Button
                          x:Name="BtnBack"
                          Style="{StaticResource MaterialDesignIconButton}"
                          ToolTip="Trở về"
                          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                          IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Click="BtnBack_Click">
                <materialDesign:PackIcon
                                    Kind="ArrowLeft"
                                    Foreground="{StaticResource Title}"
                                    />
            </Button>
            <TextBlock
                x:Name="Title"
                    FontWeight="SemiBold"
                    FontFamily="{StaticResource Mulish}"
                    FontSize="{x:Static localfont:Font.Title}"
                    Foreground="{StaticResource Title}"
                    Margin="20,3,0,0"
                    VerticalAlignment="Center"
                    >
                    Chi tiết khách hàng
            </TextBlock>

        </StackPanel>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="0" Grid.Row="1" Margin="20, 20, 20, 50"/>
            <Rectangle Fill="White" IsHitTestVisible="False" Grid.Column="1" Grid.Row="1" Margin="20, 20, 20, 50"/>

            <Grid
                Grid.Row="0"
                Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="688.2*" ></RowDefinition>
                    <RowDefinition Height="202*" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid
                    x:Name="CusInfor"
                    IsEnabled="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="95.2*" ></RowDefinition>
                        <RowDefinition Height="118*"></RowDefinition>
                        <RowDefinition Height="119*"></RowDefinition>
                        <RowDefinition Height="118*"></RowDefinition>
                        <RowDefinition Height="119*"></RowDefinition>
                        <RowDefinition Height="119*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Grid.Row="0"
                    FontFamily="{StaticResource Mulish}"
                    Foreground="{StaticResource Title}"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    >
                    Thông tin cá nhân
                    </TextBlock>

                    <localcustom:TextboxCustom
                    Grid.Row="1"
                    x:Name="Name"        
                    Title="   Tên khách hàng"
                    FontFamily="{StaticResource Mulish}"
                    FontSize="{x:Static localfont:Font.Body}"
                    MarginText="10"
                    Margin="20, 0, 20, 0"
                    CornerRadiusText="5"
                >
                    </localcustom:TextboxCustom>

                    <localcustom:TextboxCustom
                    Grid.Row="2"
                    x:Name="Phone"
                    Title="   Số điện thoại"
                    FontFamily="{StaticResource Mulish}"
                    FontSize="{x:Static localfont:Font.Body}"
                    MarginText="10"
                    Margin="20, 0, 20, 0"
                    CornerRadiusText="5"
                >
                    </localcustom:TextboxCustom>
                    <StackPanel
                 Grid.Row="3" 
                Grid.Column="0"
                VerticalAlignment="Top"
                Margin="20, 0, 20, 0"
                >
                        <TextBlock   
                                FontFamily="{StaticResource Mulish}"
                                FontSize="{x:Static localfont:Font.Body}"
                                FontWeight="SemiBold"
                                Text="   Ngày sinh"
                                Foreground="Black"                   
                                Margin="0, 0, 0, 10"
                                VerticalAlignment="Top">
                        </TextBlock>

                        <Border  Background="{StaticResource Background}"
                            BorderBrush="#DBD7F4"
                            CornerRadius="8"
                            VerticalAlignment="Center">
                            <DatePicker
                              Name="Birthday"
                              BorderBrush="#DBD7F4"
                              FontFamily="{StaticResource Mulish}"
                              FontSize="{x:Static localfont:Font.Body}"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                        </Border>
                    </StackPanel>
                    <localcustom:TextboxCustom
                    Grid.Row="4"
                    x:Name="Adress"
                    Title="   Địa chỉ"
                     MarginText="10"
                    Margin="20, 0, 20, 0"
                    CornerRadiusText="5"
                    FontFamily="{StaticResource Mulish}"
                    FontSize="{x:Static localfont:Font.Body}" 
                >
                    </localcustom:TextboxCustom>
                    <localcustom:TextboxCustom
                    Grid.Row="5"
                    x:Name="Point"
                    Texthint = "0"
                    Title="   Điểm thưởng"
                    FontFamily="{StaticResource Mulish}"
                    FontSize="{x:Static localfont:Font.Body}"
                    MarginText="10"
                    Margin="20, 0, 20, 0"
                    CornerRadiusText="5"
                >
                    </localcustom:TextboxCustom>
                </Grid>
                
                <StackPanel
                    VerticalAlignment="Top"
                    Margin="0,10,20,0"
                    Orientation="Horizontal"
                    Grid.Row="6"
                    HorizontalAlignment="Right">
                    <Button
                                x:Name="BtnDelete"
                                Background="Transparent"
                                Width="110"
                                Height="48"
                                Margin="10"
                                FontFamily="{StaticResource Mulish}"
                                FontSize="16"
                                Foreground="{StaticResource Warning}"
                                BorderBrush="{StaticResource Warning}" Click="BtnDelete_Click"
                            >
                        Xóa
                    </Button>
                    <Button
                            x:Name="BtnEdit"
                             Width="150"
                            Height="48"
                            Margin="20, 0, 0, 0"
                            FontFamily="{StaticResource Mulish}"
                            FontSize="16"
                            Background="{StaticResource MainColor}" Click="BtnEdit_Click">
                        Chỉnh sửa
                    </Button>

                </StackPanel>
            </Grid>
            <Grid
                Grid.Column="1"
                Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.12*"></RowDefinition>
                    <RowDefinition Height="0.06*"></RowDefinition>
                    <RowDefinition Height="0.8*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="24"
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        FontFamily="{StaticResource Mulish}"
                        Foreground="{StaticResource Title}"
                        Margin="20,0,0,10"
                        VerticalAlignment="Center"
                    >
                    Lịch sử hóa đơn
                    </TextBlock>
                    <localcustom:Search
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Margin="20, 0, 20, 10"
                        x:Name="Search"  
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        Texthint="Mã hóa đơn"
                        Width="300">
                    </localcustom:Search>
                </Grid>
                <local:CustomerDetailViewBillTitle
                    Grid.Row="1"
                    Margin="10, 0, 10, 0">
                </local:CustomerDetailViewBillTitle>
                <ListView
                    Grid.Row="2"
                    Margin="10, 0, 10, 0"
                    x:Name="ListBills">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:CustomerDetailViewBillRow></local:CustomerDetailViewBillRow>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </Grid>
        </Grid>

    </Grid>
</UserControl>
