<UserControl
    x:Class="ComputerProject.CustomerWorkspace.CustomerDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComputerProject.CustomerWorkspace"
    xmlns:localcustom="clr-namespace:ComputerProject.CustomControl"
    xmlns:localfont="clr-namespace:ComputerProject.Resource.Font"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1024"
    d:DesignWidth="1485"
    Background="{StaticResource Background}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*" />
            <RowDefinition Height="0.91*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="20,0,0,0.8"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                x:Name="BtnBack"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Trở về">
                <materialDesign:PackIcon Foreground="{StaticResource Title}" Kind="ArrowLeft" />
            </Button>
            <TextBlock
                x:Name="Title"
                Margin="20,3,0,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Mulish}"
                FontSize="{x:Static localfont:Font.Title}"
                FontWeight="SemiBold"
                Foreground="{StaticResource Title}"
                Text="{Binding Title}" />

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Rectangle
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,20,20,50"
                Fill="White"
                IsHitTestVisible="False" />
            <Rectangle
                Grid.Row="1"
                Grid.Column="1"
                Margin="20,20,20,50"
                Fill="White"
                IsHitTestVisible="False" />

            <Grid Grid.Row="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="688.2*" />
                    <RowDefinition Height="202*" />
                </Grid.RowDefinitions>
                <Grid x:Name="CusInfor" IsEnabled="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="95.2*" />
                        <RowDefinition Height="118*" />
                        <RowDefinition Height="119*" />
                        <RowDefinition Height="118*" />
                        <RowDefinition Height="119*" />
                        <RowDefinition Height="119*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Title}">
                        Thông tin cá nhân
                    </TextBlock>

                    <localcustom:TextboxCustom
                        x:Name="Name"
                        Title="   Tên khách hàng"
                        Grid.Row="1"
                        Margin="20,0,20,0"
                        CornerRadiusText="5"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        MarginText="10"
                        Text="{Binding FullName, Mode=TwoWay}" />

                    <localcustom:TextboxCustom
                        x:Name="Phone"
                        Title="   Số điện thoại"
                        Grid.Row="2"
                        Margin="20,0,20,0"
                        CornerRadiusText="5"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        MarginText="10"
                        Text="{Binding PhoneNumber, Mode=TwoWay}" />
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="20,0,20,0"
                        VerticalAlignment="Top">
                        <TextBlock
                            Margin="0,0,0,10"
                            VerticalAlignment="Top"
                            FontFamily="{StaticResource Mulish}"
                            FontSize="{x:Static localfont:Font.Body}"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Text="   Ngày sinh" />

                        <Border
                            VerticalAlignment="Center"
                            Background="{StaticResource Background}"
                            BorderBrush="#DBD7F4"
                            CornerRadius="8">
                            <DatePicker
                                Name="Birthday"
                                BorderBrush="#DBD7F4"
                                Foreground="Black"
                                FontFamily="{StaticResource Mulish}"
                                FontSize="{x:Static localfont:Font.Body}"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                SelectedDate="{Binding Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Border>
                    </StackPanel>
                    <localcustom:TextboxCustom
                        x:Name="Adress"
                        Title="   Địa chỉ"
                        Grid.Row="4"
                        Margin="20,0,20,0"
                        CornerRadiusText="5"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        MarginText="10"
                        Text="{Binding Address, Mode=TwoWay}" />
                    <localcustom:TextboxCustom
                        x:Name="Point"
                        Title="   Điểm thưởng"
                        Grid.Row="5"
                        Margin="20,0,20,0"
                        CornerRadiusText="5"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        MarginText="10"
                        Text="{Binding Point_String, Mode=TwoWay}"
                        Texthint="0" />
                </Grid>

                <StackPanel
                    x:Name="ButtonEditMode"
                    Grid.Row="6"
                    Margin="0,10,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Visibility="{Binding ButtonGroupVisibility_Edit, FallbackValue=Hidden}">
                    <Button
                        Width="110"
                        Height="48"
                        Margin="10"
                        Background="Transparent"
                        BorderBrush="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}"
                        Click="OnCancelEdit"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="16"
                        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
                        Hủy
                    </Button>
                    <Button
                        Width="110"
                        Height="48"
                        Margin="20,0,0,0"
                        Background="{StaticResource MainColor}"
                        Click="OnSaveEdit"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="16">
                        Cập nhật
                    </Button>

                </StackPanel>

                <StackPanel
                    x:Name="ButtonReadMode"
                    Grid.Row="6"
                    Margin="0,10,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Visibility="{Binding ButtonGroupVisibility_Read}">
                    <Button
                        Width="110"
                        Height="48"
                        Margin="10"
                        Background="Transparent"
                        BorderBrush="{StaticResource Warning}"
                        Click="OnDelete"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="16"
                        Foreground="{StaticResource Warning}">
                        Xóa
                    </Button>
                    <Button
                        Width="110"
                        Height="48"
                        Margin="20,0,0,0"
                        Background="{StaticResource MainColor}"
                        Click="OnStartEdit"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="16">
                        Chỉnh sửa
                    </Button>

                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.12*" />
                    <RowDefinition Height="0.06*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="20,0,0,10"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Title}">
                        Lịch sử hóa đơn
                    </TextBlock>
                    <localcustom:Search
                        x:Name="Search"
                        Grid.Column="1"
                        Width="300"
                        Margin="20,0,20,10"
                        HorizontalAlignment="Right"
                        FontFamily="{StaticResource Mulish}"
                        FontSize="{x:Static localfont:Font.Body}"
                        Texthint="Mã hóa đơn" />
                </Grid>
                <local:CustomerDetailViewBillTitle Grid.Row="1" Margin="10,0,10,0" />
                <ListView
                    x:Name="ListBills"
                    Grid.Row="2"
                    Margin="10,0,10,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:CustomerDetailViewBillRow />
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </Grid>

            <Border
                x:Name="busy"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Panel.ZIndex="15"
                Background="#40000000"
                CornerRadius="4"
                IsHitTestVisible="True"
                Visibility="{Binding BusyVisibility, FallbackValue=Hidden}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Control
                        Width="55"
                        Margin="0"
                        Foreground="Blue"
                        Style="{StaticResource WaitSpinnerStyle}" />
                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Đang tải..." />
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
