<UserControl
    x:Class="ComputerProject.CustomerWorkspace.CustomerTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComputerProject.CustomerWorkspace"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:CustomerTabViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1150"
    Background="{StaticResource Background}"
    mc:Ignorable="d">
    <Grid>
        <ContentControl Content="{Binding CurrentMainView}" />
    </Grid>
</UserControl>
